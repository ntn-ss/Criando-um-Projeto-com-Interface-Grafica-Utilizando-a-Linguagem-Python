<CreateAccountWindow>:
    name: 'Cadastrar'

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: 'Criar conta'
                size_hint: 0.8, 0.2
                pos_hint: {'x': 0.1, 'top': 1}

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {'x': 0, 'top': 0.8}
                text: 'Name:'
            
            TextInput:
                pos_hint: {'x': 0.5, 'top': 0.8}
                size_hint: 0.4, 0.12
                id: namee
                multiline: False,

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {'x': 0, 'top': 0.8-0.13}
                text: 'E-mail:'

            TextInput:
                pos_hint: {'x': 0.5, 'top': 0.8 - 0.13}
                size_hint: 0.4, 0.12
                id: email
                multiline: False

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {'x': 0, 'top': 0.8-0.13*2}
                text: 'Senha:'

            TextInput:
                pos_hint: {'x': 0.5, 'top': 0.8 - 0.13*2}
                size_hint: 0.4, 0.12
                id: passw
                multiline: False
                password: True

            Button:
                pos_hint: {'x': 0.3, 'y': 0.25}
                size_hint: 0.4, 0.1
                text: 'Já tem uma conta? Entrar'
                on_release:
                    root.manager.transition.direction='left'
                    root.login()

            Button:
                pos_hint: {'x': 0.2, 'y': 0.05}
                size_hint: 0.6, 0.15
                text: 'Cadastrar'
                on_release:
                    root.manager.transition.direction='left'
                    root.submit()

<LoginWindow>:
    name: 'Entrar'
    
    email: email
    password: password

    FloatLayout:
        Label:
            text: 'E-mail:'
            pos_hint:{'x': 0.1, 'top': 0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            multiline: False
            pos_hint: {'x': 0.45, 'top': 0.9}
            size_hint: 0.4, 0.15
        
        Label:
            text: 'Senha:'
            pos_hint: {'x': 0.1, 'top': 0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            multiline: False
            password: True
            pos_hint: {'x': 0.45, 'top': 0.7}
            size_hint: 0.4, 0.15
        
        Button:
            pos_hint:{'x': 0.2, 'y': 0.05}
            size_hint: 0.6, 0.2
            text: 'Entrar'
            on_release:
                root.manager.transition.direction='up'
                root.loginBtn()
        
        Button:
            pos_hint: {'x': 0.3, 'y': 0.3}
            size_hint: 0.4, 0.1
            text: 'Ainda não tem uma conta? Cadastre-se'
            on_release:
                root.manager.current='Cadastrar'

<MainWindow>:
    n: name
    email: email
    created: created

    FloatLayout:
        Label:
            id: name
            pos_hint: {'x': 0.1, 'top': 0.9}
            size_hint: 0.8, 0.2
            text: 'Nome do usuário:'

        Label:
            id: email
            pos_hint: {'x': 0.1, 'top': 0.7}
            size_hint: 0.8, 0.2
            text: 'E-mail:'
        
        Label:
            id: created
            pos_hint: {'x': 0.1, 'top': 0.5}
            size_hint: 0.8, 0.2
            text: 'Criado em:'

        Button:
            pos_hint: {'x': 0.2, 'y': 0.1}
            size_hint: 0.6, 0.2
            text: 'Sair'
            on_release:
                app.root.current = 'Entrar'
                root.manager.transition.direction='down'